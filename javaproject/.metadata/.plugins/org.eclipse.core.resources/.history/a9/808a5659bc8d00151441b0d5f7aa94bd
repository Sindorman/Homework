package Homework7;
import java.util.*;
public class NumberFive {
	public static void main(String[] args){
		boolean UserWon = false;
		Random rand = new Random();
		Scanner MasterMind = new Scanner(System.in);
		int[] SecretNumber = new int[4];
		int[] UserNumber = new int[4];
		String UserInput = "";
		int y = 1;
		do{
			for(int x = 0; x < 4; x++){
				SecretNumber[x] = rand.nextInt(10)+1;
			}
			System.out.print("Please write 4 digit number: ");
			UserInput = MasterMind.next();
			for(int x = 0; x < 4; x++){
				
				char number = UserInput.charAt(y);
				UserNumber[x] = Digit(number);
				y +=2;
			}
		}while(UserWon != true);
	}
	public static int Digit(char number){
		int RealNumber = 0;
		if(number == 1){
			RealNumber = 1;
		}else if(number == 2){
			RealNumber = 2;
		}else if(number == 3){
			RealNumber = 3;
		} else if(number == 4){
			RealNumber = 4;
		} else if(number == 5){
			RealNumber = 5;
		}else if(number == 6){
			RealNumber = 6;
		}else if(number == 7){
			RealNumber = 7;
		}else if(number == 8){
			RealNumber = 8;
		}else if(number == 9){
			RealNumber = 9;
		}else if(number == 10){
			RealNumber = 10;
		}
		return RealNumber;
	}
}
