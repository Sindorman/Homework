package Homework7;

public class NumberFour {
	public static void main(String[] args){
		int [][]MatrixOne = {{7, 2}, 
							 {8, 4}};
		int [][]MatrixTwo = {{5, 3}, 
							 {-3, 9}};
		matrixAdd(MatrixOne, MatrixTwo);
	}
	public static int[][] matrixAdd(int[][] MatrixOne, int [][] MatrixTwo){
		int [][]Add = new int[MatrixOne.length][MatrixOne[1].length];
		for(int x = 0; x < MatrixOne.length; x++){
			
			for(int y = 0; y < MatrixOne[x].length; y++){
				Add[x][y] = MatrixOne[y][x] + MatrixTwo[y][x];
			}
		}
		
		return Add;
	}
}
