
public class Date {
	
	private int year;
	private int month;
	private int day;
	
	
	
	public Date(int year, int month, int day){
		this.year = year;		
		this.month = month;
		this.day = day;
	}
	
	public void addDays(int days){
		days = days + this.day;
		if(days > 31){
			while(days > 31){
				this.month ++;
				if(month > 12){
					this.year++;
					this.month -= 12;
				}
				days -= 31;
			}
			this.day = days;
		}else{
			this.day += days;
		}
		
	}
	
	public void addWeeks(int weeks){
		int days = 7 * weeks +  this.day;
		if(days > 31){
			while(days > 31){
				this.month ++;
				if(month > 12){
					this.year++;
					this.month -= 12;
				}
				days -= 31;
			}
			this.day = days;
		}else{
			this.day += days;
		}
		
	}
	
	
	
	public String toString(){
		String month = "";
		String days = "";
		if (this.month > 10) {
			month = "0" + this.month;
		}else {
			month += this.month;
		}
		if (this.day > 10) {
			days = "0" + this.day;
		}else {
			days += this.day;
		}
		return this.year + "/" + month + "/" + days;
		
	}
	
}
